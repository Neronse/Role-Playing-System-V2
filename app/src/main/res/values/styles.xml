<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:buttonStyle">@style/AppThemeBase.Widget.Button</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:autoCompleteTextViewStyle">
            @style/AppThemeBase.Widget.AutoCompleteTextView
        </item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:editTextStyle">@style/AppThemeBase.Widget.EditText</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.TextView">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppThemeBase.Widget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppThemeBase.Widget.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppThemeBase.Widget.Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="AppTheme.TextWhite">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:textColorHint">@color/white7</item>
        <item name="android:textColorSecondary">@color/white7</item>
    </style>

    <style name="AppTheme.Widget.TextView.White7">
        <item name="android:textColor">@color/white7</item>
    </style>

</resources>
